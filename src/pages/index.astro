---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} - Home Page`} description={`${SITE_DESCRIPTION} - Home Page`} />
		<GoogleAnalytics />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: auto;
			}

			/* --- NEW STYLES START HERE --- */

			/* The main list container */
			ul {
				display: flex;
				flex-direction: column;
				gap: 2rem; /* Space between cards */
				list-style-type: none;
				margin: 0;
				padding: 0;
			}

			/* The Card */
			ul li {
				border-radius: 12px;
				background: #FAFAFA;
				border: 1px solid #E5E5E5;
				overflow: hidden; /* Ensures the image corners are rounded */
				box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -2px rgba(0, 0, 0, 0.05);
				transition: box-shadow 0.2s ease, transform 0.2s ease;
				height: 180px;
			}

			ul li:hover {
				box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
				transform: translateY(-2px);
			}

			/* The link that wraps the card content */
			ul li a {
				display: flex;
				align-items: center;
				gap: 10px;
				color: inherit;
				text-decoration: none;
				height: 100%;
			}

			/* The image container on the left */
			.card-image {
				flex-shrink: 0;
				width: 300px;
				height: 150px;
				margin: 10px 10px 10px 13px;
				}

			.card-image img {
				width: 100%;
				height: 100%;
				object-fit: cover; /* Ensures the image covers the area without distortion */
				border-radius: 12px;
			}

			/* The text content container on the right */
			.card-content {
				padding: 1rem 1rem 1rem 0; /* Add padding to the text */
				display: flex; /* ADD THIS */
				flex-direction: column; /* ADD THIS */
				flex-grow: 1; /* ADD THIS */
			}

			.title {
				font-size: 1.25rem;
				font-weight: 700; /* Titles are bold by default, but this ensures it */
				margin: 0 0 0.5rem 0;
				color: rgb(var(--black));
				line-height: 1.2;
			}

			.description {
				margin: 0 0 1rem 0;
				color: #555;
				font-size: 0.9rem;
				line-height: 1.5;
				overflow: hidden;
				display: -webkit-box;
				-webkit-box-orient: vertical;
				-webkit-line-clamp: 2;
			}
			
			.date {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.9rem;
				margin-top: auto;
			}

			/* Responsive styles for smaller screens */
			@media (max-width: 720px) {
				ul li {
					height: auto;
				}
				ul li a {
					flex-direction: column; /* Stack image on top of content */
					gap: 0;
				}
				.card-image {
					width: 100%;
					height: 250px;
				}
				.card-content {
					padding: 1.5rem;
				}
			}

			/* --- NEW STYLES END HERE --- */
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>Techzard - Pro Tech Blogs</h1>
				<h2>Featured Blogs</h2>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<div class="card-image">
										{post.data.heroImage && (
											<Image
												width={300}
												height={170}
												src={post.data.heroImage}
												alt={post.data.heroAlt || 'Blog post image'}
											/>
										)}
									</div>
									<div class="card-content">
										<h3 class="title">{post.data.title}</h3>
										<p class="description">{post.data.description}</p>
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
